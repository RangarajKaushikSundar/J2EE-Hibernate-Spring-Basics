<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean name="writer" class="com.cg.loose.OutputWriterHelper">
			<property name="outputWriter" ref="xmlwriter"></property>
	</bean>
	<bean name="htmlwriter" class="com.cg.loose.HtmlGenerator"></bean>
	<bean name="pdfwriter" class="com.cg.loose.PdfGenerator"></bean>
	<bean name="xmlwriter" class="com.cg.loose.XMLGenarator"></bean>
</beans>
